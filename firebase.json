{
	"database": {
		"rules": "database.rules.json"
	},

	"functions": {
		"predeploy": []
	},
	"hosting": {
		"public": "build",
		"ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
		"rewrites": [
			{
				"source": "**",
				"destination": "/index.html"
			}
		],
		"headers" : [{
			"source" : "**",
			"headers" : [ {
				"key" : "Cache-Control",
				"value" : "no-cache"
			}]
		}]
	},
	"storage": {
		"rules": "storage.rules"
	}
}
